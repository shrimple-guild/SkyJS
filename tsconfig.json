{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
    "moduleResolution": "NodeNext",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
	},
	"include": [
		"src"
	]
}